{
    "name": "ppfeufer/pp-wordpress-tweaks",
    "description": "WordPress Tweaks - A collection of personal tweaks for WordPress.",
    "authors": [
        {
            "name": "Peter Pfeufer",
            "email": "develop@ppfeufer.de"
        }
    ],
    "require": {
        "yahnis-elsts/plugin-update-checker": "^5.6",
        "iconicwp/wpsf": "dev-master"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "wp-cli/wp-cli-bundle": "^2.12",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "extra": {
        "strauss": {
            "target_directory": "Sources/Libs",
            "namespace_prefix": "Ppfeufer\\Plugin\\WordPressTweaks\\Libs\\",
            "packages": [
                "yahnis-elsts/plugin-update-checker",
                "iconicwp/wpsf"
            ],
            "include_modified_date": false,
            "include_author": false
        }
    },
    "scripts": {
        "prefix-namespaces": [
            "sh -c 'test -f ./bin/strauss.phar || curl -o bin/strauss.phar -L -C - https://github.com/BrianHenryIE/strauss/releases/latest/download/strauss.phar'",
            "@php bin/strauss.phar",
            "@composer dump-autoload"
        ],
        "post-install-cmd": [
            "@composer prefix-namespaces"
        ],
        "post-update-cmd": [
            "@composer prefix-namespaces"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "classmap-authoritative": true,
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ppfeufer\\Plugin\\WordPressTweaks\\": "Sources"
        },
        "classmap": [
            "Sources/Libs"
        ]
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "iconicwp/wpsf",
                "version": "master",
                "source": {
                    "url": "https://github.com/iconicwp/WordPress-Settings-Framework.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ]
}
